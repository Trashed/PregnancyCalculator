<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.trashed.pregnancycalculator"
    android:versionCode="1"
    android:versionName="0.1 Beta" 
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/baby_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".SetBirthDateActivity" 
            android:label="@string/set_birth_activity" 
            android:screenOrientation="portrait" android:theme="@android:style/Theme.Dialog" >"
        </activity>
    </application>

</manifest>